.wordbook
  %div{ class: 'wordbook__colums wordbook__colums--thick'} 
    %div{ class: 'wordbook__colums__title'}
      %div{ class: 'inter'} USER
      %div{ class: 'inter__user'}
  %div{ class: 'wordbook__colums wordbook__colums--thin'}
    %div{ class: 'wordbook__colums__title'}
      %div{ class: 'inter'} 
        = link_to 'BOOKS',  new_group_path, class: 'BOOKS'
        %i{ class: 'fas fas-book-open' }
    .form
      -# = form_for @groups, url: group_words_path do |f|
      -#   = f.text_field :name, class:'input_group', placeholder: 'type a name'
      -#   = f.submit 'register', class:'submit'
    - @group.each do |g|
      %div{ class: 'booklist' }
        %div{ class: 'bookname' }
          = g.name
        %div{ class: 'bookbutton' }
          %div{ class: 'editfunction' }
            = link_to 'edit', edit_group_path(id:@group.ids)
          %div{ class: 'deletefunction' }
            = link_to 'delete', group_path(id:@group.ids), method: :delete
  %div{ class: 'wordbook__word'}
    %div{ class: 'cardlist'}
      - @word.each do |w|
        %div{ class: 'wordbook__word__card'}
          %div{ class: 'cardcontent'}
            = w.word
          %div{ class: 'cardcontent'}
            = w.meaning
    %div{ class: 'inputbox'}
      %div{ class: 'input'}
        %div{ class: 'inputmini'}
          = form_for @words, url: group_words_path do |f|
            = f.text_field :word, class:'input_box', placeholder: 'type a word'
            = f.text_field :meaning, class:'input_box', placeholder: 'type a meaning'
            = f.submit 'register', class:'submit'
      %div{ class: 'bigbutton'}    